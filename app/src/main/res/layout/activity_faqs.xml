<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/imgprin"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preguntas Frecuentes"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_margin="16dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1-¿Qué es Gymnavi?"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:padding="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gymnavi es una app hecha en Java que te ayuda a mejorar tu salud y forma física mediante rutinas
personalizadas, seguimiento de tu progreso y consejos de expertos."
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:padding="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2-¿Cómo puedo registrarme en Gymnavi?"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:padding="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Para registrarte en Gymnavi, solo tienes que abrir la app y pulsar el botón de “Registrate”. Luego,
tendrás que introducir tu nombre, correo electrónico y contraseña para crear una cuenta."
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:padding="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3-¿Cómo puedo iniciar sesión en Gymnavi?"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:padding="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Para iniciar sesión en Gymnavi, solo tienes que abrir la app y Luego, tendrás que introducir tu
correo electrónico y contraseña, si no tienes cuenta aun debes pulsar el botón de “Registrate”."
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:padding="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4-¿Qué puedo hacer en el menú principal de Gymnavi?"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:padding="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="En el menú principal de Gymnavi, puedes acceder a las siguientes opciones:
Rutinas: Aquí puedes ver las rutinas que te ha asignado la app según tus objetivos y preferencias.
Puedes elegir entre diferentes tipos de ejercicios para los diferentes músculos.
Perfil: Aquí puedes ver y editar tu información personal, como tu nombre, biografía y foto de perfil
Objetivos: Aquí puedes establecer y modificar tus objetivos de entrenamiento, como perder peso,
ganar masa muscular, mejorar tu resistencia, etc."
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:padding="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5-¿Qué beneficios tiene usar Gymnavi?"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:padding="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usar Gymnavi tiene muchos beneficios para tu salud y tu forma física, como:
-Mejorar tu rendimiento cardiovascular, muscular y respiratorio.
-Reducir el riesgo de enfermedades como la obesidad, la diabetes, la hipertensión, etc.
-Aumentar tu autoestima, tu confianza y tu bienestar emocional.
-Divertirte y disfrutar de una actividad física adaptada a ti."
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:padding="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6-¿Cómo puedo cambiar mi objetivo de entrenamiento en Gymnavi?"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:padding="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Para cambiar tu objetivo de entrenamiento en Gymnavi, debes ir a la sección “Objetivos” en el
menú principal. Aquí, podrás seleccionar un nuevo objetivo de entrenamiento y guardar los
cambios."
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:padding="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7-¿Cómo puedo descargar el código fuente de Gymnavi?"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:padding="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Para descargar el código fuente de Gymnavi, puedes visitar nuestro [repositorio en GitHub]. Allí,encontrarás el código."
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:padding="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salir"
            android:backgroundTint="#FF0000"
            android:textColor="#FFFFFF"
            android:onClick="cierrefaqs"
            android:layout_margin="16dp"/>
    </LinearLayout>
</ScrollView>